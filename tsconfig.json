{
  "compilerOptions": {
    "baseUrl": "./packages",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "paths": {
      "@sensoro/sensoro-design/*": ["./sensoro-design/src/*"],
      "@site/*": ["./sensoro-ui-site/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
    "example",
    "_test_"
  ]
}
